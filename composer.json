{
    "name": "pk/command-extra-bundle",
    "type": "symfony-bundle",
    "description": "Bundle that adds some flavor to Symfony2's commands",
    "keywords": ["command"],
    "homepage": "http://github.com/pkruithof/PKCommandExtraBundle",
    "authors": [
        {
            "name": "Peter Kruithof",
            "email": "pkruithof@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "doctrine/doctrine-bundle": "^1.5",
        "monolog/monolog": "^1.7",
        "symfony/framework-bundle": "^2.7|^3.0"
    },
    "suggest": {
        "ext-posix": "to enable support for single-processed commands"
    },
    "autoload": {
        "psr-0": { "PK": "src/" }
    }
}